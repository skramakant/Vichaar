<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:id="@+id/cv_idea_card_item"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_idea_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/idea_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycle idea dis"
                android:textSize="25dp"
                android:maxLines="2"
                android:textColor="@color/text_view_color"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="ramakant singh"
                    android:textSize="15dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_view_color"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/category"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="clean india"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/text_view_color"
                    android:textSize="15dp"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:id="@+id/tvVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UpVote"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                    <TextView
                        android:id="@+id/tvVoteCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangle"
                    android:layout_marginLeft="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DownVote"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                    <TextView
                        android:id="@+id/tvCommentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangle"
                    android:layout_marginLeft="3dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="views"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                    <TextView
                        android:id="@+id/tvViewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="15dp"
                        android:padding="4dp"
                        android:gravity="center"
                        android:textColor="@color/app_background_color"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





</android.support.v7.widget.CardView>