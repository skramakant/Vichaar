<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/app_background_color"
    tools:context="com.vichaar.vichaar.AddIdea">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Title"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_title" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/idea_title_value"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Title"
                android:layout_height="60dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Category"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_category" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/idea_category_value"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Category"
                android:layout_height="60dp"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Description"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_description" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/idea_description_value"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Description"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_height="80dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Name"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_person_name" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/idea_person_name_value"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Your Name"
                android:layout_height="60dp"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Email"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_person_email" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Your Email"
                android:id="@+id/idea_person_email_value"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Mobile"
                android:textSize="30dp"
                android:padding="8dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/idea_person_mobile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/idea_person_mobile_value"
                android:padding="3dp"
                android:textSize="20dp"
                android:hint="Enter Mobile Number"
                android:layout_gravity="center_horizontal" />


            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/add_idea"
                android:background="@color/app_background_color"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add Title"
                android:textSize="30dp"
                android:padding="8dp"
                />


        </LinearLayout>

    </ScrollView>
</android.support.v7.widget.CardView>
